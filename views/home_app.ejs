            <!-- </button> -->
            <button id="stop-record-button" style="display: none">
              STOP RECORDüü•
            </button>
          </div>
        </div>
      </div>
      <div class="conference-col-1 expand">
        <div class="conference-rside">
          <h4 class="conference-rside-name">Group Chat</h4>
          <div class="conference-rside-buttons">
            <button class="
                  btn
                  custom-btn-primary
                  btn-sm
                  chatBtnRsd
                  conferenceChatBtn
